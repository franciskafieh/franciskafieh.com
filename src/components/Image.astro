---
export interface Props {
  name: string;
  alt: string;
  caption: string;
}

const { alt, caption, name } = Astro.props;

const slug = Astro.url.pathname.substring(10);
---

<figure>
  <img src={"/images" + slug + "/" + name} alt={alt} />
  <figcaption class="text-center">{caption}</figcaption>
</figure>
